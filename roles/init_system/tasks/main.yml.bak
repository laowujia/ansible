- name: Include OS-specific variables.
  include_vars: "{{ansible_os_family}}.yml"
  tags:
  - always

- import_tasks: 1.hostname.yml
  tags:
   - hostname

- import_tasks: 2.repo.yml
  tags:
   - repo

- import_tasks: 3.chkconfig.yml
  tags:
  - chkconfig

- import_tasks: 4.package.yml
  tags:
  - package

- import_tasks: 5.limits.yml
  tags:
  - limits

- import_tasks: 6.sysctl.yml
  tags:
  - sysctl

- import_tasks:  7.date.yml
  tags:
  - date

- name : reboot system
  shell: "sheel 5; shutdown -r new"
  async: 10
  poll: 0
  ignore_errors: yes
  tags:
   - reboot
