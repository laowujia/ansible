bind 0.0.0.0
port {{Redis_port}}
logfile "redis.log"
dbfilename dump.rdb
dir {{Redis_dir}}/redis/
protected-mode yes
daemonize yes
requirepass {{Redis_passwd}}
replica-priority 10
masterauth {{Redis_passwd}}

{% if ansible_default_ipv4.address == Redis_master_ip %}
#slaveof {{Redis_master_ip}} {{Redis_port}}
{% else %}
slaveof {{Redis_master_ip}} {{Redis_port}}
{% endif %}
