[Unit]
Description=Advanced key-value store
After=network.target
Documentation=http://redis.io/documentation, man:redis-server(1)
 
[Service]
Type=forking
ExecStart={{Redis_dir}}/redis/src/redis-server {{Redis_dir}}/redis/redis.conf
TimeoutStopSec=0
Restart=always
WorkingDirectory={{Redis_dir}}/redis
 
[Install]
WantedBy=multi-user.target
